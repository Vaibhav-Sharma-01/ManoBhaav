<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".wrapperscheduler"
    android:orientation="vertical"
    android:background="@color/contentBodyColor"
    android:gravity="center_horizontal"
    android:padding="10dp">
<LinearLayout
    android:layout_width="match_parent"
    android:id="@+id/ll"
    android:layout_height="500dp"
    android:orientation="vertical">

    <TextView
        android:id="@+id/intro_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/you_can_schedule_latest_tweets_analysis_here"
        android:fontFamily="cursive"
        android:layout_gravity="center"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="20sp"
        android:layout_centerHorizontal="true"
        android:textStyle="italic" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp">
        <AutoCompleteTextView
            android:id="@+id/t1"
            android:layout_width="240dp"
            android:layout_marginTop="20dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Enter tweeter handle"
            android:fontFamily="cursive"
            android:text="\@"
            android:inputType="text"
            android:textSize="28sp"
            app:layout_constraintBottom_toTopOf="@+id/nav_view"
            app:layout_constraintTop_toBottomOf="@+id/textView4"
            app:layout_constraintVertical_bias="0.082"
            tools:layout_editor_absoluteX="0dp" />

        <Button
            android:id="@+id/b1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="40dp"
            android:background="@drawable/button_rounded"
            android:fontFamily="sans-serif-black"
            android:text="@string/schedule"
            android:onClick="schedule"
            android:textColor="#ffffffff"
            android:textSize="16sp"
            app:layout_constraintBottom_toTopOf="@+id/nav_view"
            app:layout_constraintTop_toBottomOf="@+id/textInputEditText2"
            app:layout_constraintVertical_bias="0.12"
            tools:layout_editor_absoluteX="0dp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <AutoCompleteTextView
            android:id="@+id/t2"
            android:layout_width="240dp"
            android:layout_marginTop="20dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Enter tweeter handle"
            android:fontFamily="cursive"
            android:text="\@"
            android:inputType="text"
            android:textSize="28sp"
            app:layout_constraintBottom_toTopOf="@+id/nav_view"
            app:layout_constraintTop_toBottomOf="@+id/textView4"
            app:layout_constraintVertical_bias="0.082"
            tools:layout_editor_absoluteX="0dp" />

        <Button
            android:id="@+id/b2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/button_rounded"
            android:text="@string/schedule"
            android:onClick="schedule2"
            android:fontFamily="sans-serif-black"
            android:textColor="#ffffffff"
            android:textSize="16sp"
            android:layout_marginTop="20dp"
            app:layout_constraintBottom_toTopOf="@+id/nav_view"
            app:layout_constraintTop_toBottomOf="@+id/textInputEditText2"
            app:layout_constraintVertical_bias="0.12"
            tools:layout_editor_absoluteX="0dp"
            android:layout_marginBottom="40dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <AutoCompleteTextView
            android:id="@+id/t3"
            android:layout_width="240dp"
            android:layout_marginTop="20dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Enter tweeter handle"
            android:fontFamily="cursive"
            android:text="\@"
            android:inputType="text"
            android:textSize="28sp"
            app:layout_constraintBottom_toTopOf="@+id/nav_view"
            app:layout_constraintTop_toBottomOf="@+id/textView4"
            app:layout_constraintVertical_bias="0.082"
            tools:layout_editor_absoluteX="0dp" />

        <Button
            android:id="@+id/b3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/button_rounded"
            android:text="@string/schedule"
            android:fontFamily="sans-serif-black"
            android:textColor="#ffffffff"
            android:onClick="schedule3"
            android:textSize="16sp"
            android:layout_marginTop="20dp"
            app:layout_constraintBottom_toTopOf="@+id/nav_view"
            app:layout_constraintTop_toBottomOf="@+id/textInputEditText2"
            app:layout_constraintVertical_bias="0.12"
            tools:layout_editor_absoluteX="0dp"
            android:layout_marginBottom="40dp"/>
    </LinearLayout>
</LinearLayout>
</ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>